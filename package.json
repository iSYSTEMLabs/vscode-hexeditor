{
  "name": "TASKING-hexEditor",
  "displayName": "TASKING Hex Editor",
  "description": "Allows viewing and editing files in a hex editor",
  "version": "1.9.13",
  "aiKey": "",
  "publisher": "TASKING-winIDEA",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "TASKING Hex Editor",
        "properties": {
          "tasking-hexeditor.inspectorType": {
            "type": "string",
            "enum": [
              "aside",
              "hover",
              "sidebar"
            ],
            "default": "aside",
            "description": "Where the data inspector should be shown in the hex editor."
          },
          "tasking-hexeditor.maxFileSize": {
            "type": "number",
            "minimum": 0,
            "default": 10,
            "description": "The max file size (in MB) that the editor will try to open before warning you."
          },
          "tasking-hexeditor.dataInspector.autoReveal": {
            "type": "boolean",
            "default": true,
            "description": "Whether to auto reveal the data inspector when the hex editor is opened."
          },
          "tasking-hexeditor.defaultEndianness": {
            "type": "string",
            "default": "little",
            "enum": [
              "little",
              "big"
            ],
            "description": "The endianness selected when loading the editor."
          },
          "tasking-hexeditor.columnWidth": {
            "type": "integer",
            "default": 16,
            "minimum": 1,
            "maximum": 512,
            "description": "The number of bytes per row to show in the editor."
          },
          "tasking-hexeditor.showDecodedText": {
            "type": "boolean",
            "default": true,
            "description": "Whether decoded text should be shown in the editor."
          },
          "tasking-hexeditor.showOpenFileButton": {
            "type": "boolean",
            "default": false,
            "description": "Show Hex Editor button in editor menu."
          }
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "TASKING-hexEditor.hexedit",
        "displayName": "TASKING Hex Editor",
        "selector": [
          {
            "filenamePattern": "none"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "TASKING-hexEditor.openFile",
        "title": "TASKING Hex Editor: Open Active File in Hex Editor",
        "icon": "$(file-binary)"
      },
      {
        "command": "TASKING-hexEditor.openDebugMemory",
        "title": "TASKING Hex Editor: Open memory view",
        "icon": "$(file-binary)"
      },
      {
        "command": "TASKING-hexEditor.refresh",
        "title": "TASKING Hex Editor: Refresh memory view"
      },
      {
        "command": "TASKING-hexEditor.goToOffset",
        "title": "TASKING Hex Editor: Go To Offset"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "TASKING-hexExplorer",
          "title": "TASKING Hex Editor",
          "icon": "panel-icon.svg",
          "when": "TASKING-hexEditor:showSidebarInspector"
        }
      ]
    },
    "views": {
      "TASKING-hexExplorer": [
        {
          "type": "webview",
          "id": "TASKING-hexEditor.dataInspectorView",
          "name": "Data Inspector",
          "when": "TASKING-hexEditor:showSidebarInspector"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "TASKING-hexEditor.goToOffset",
          "when": "TASKING-hexEditor:isActive"
        },
        {
            "command": "TASKING-hexEditor.openDebugMemory",
            "when": "inDebugMode"
        },
        {
            "command": "TASKING-hexEditor.refresh",
            "when": "inDebugMode"
        }
      ],
      "editor/title": [
        {
          "when": "false && activeEditor && config.tasking-hexeditor.showOpenFileButton",
          "command": "TASKING-hexEditor.openFile",
          "group": "navigation@1"
        }
      ],
      "debug/variables/context": [
          {
            "command": "TASKING-hexEditor.openDebugMemory"
          }
      ]
    },
    "keybindings": [
      {
        "command": "TASKING-hexEditor.goToOffset",
        "key": "ctrl+g",
        "when": "activeCustomEditorId == TASKING-hexEditor.hexedit"
      }
    ]
  },
  "scripts": {
    "compile": "tsc --noEmit && node .esbuild.config.js",
    "lint": "eslint src --ext ts",
    "watch": "node .esbuild.config.js --watch",
    "test": "tsc --noEmit && node ./src/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "chai": "^4.3.4",
    "esbuild": "^0.15.10",
    "esbuild-css-modules-plugin": "^2.7.1",
    "esbuild-plugin-svgr": "^1.0.1",
    "eslint": "^8.6.0",
    "mocha": "^9.1.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@vscode/codicons": "0.0.27",
    "@vscode/extension-telemetry": "0.6.2",
    "cockatiel": "^2.0.2",
    "js-base64": "^3.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "recoil": "^0.7.6",
    "vscode-webview-tools": "^0.1.1"
  }
}
